@model BookingViewModel
@using FrameWork

<div class="container">
    <h2>رزرو وقت معاینه فنی</h2>
    <form asp-action="PickBookingTime" method="post">
        <div class="form-group">
            <label for = "ownerId">مالک خودرو:</label>
            <p>@Model.OwnerName</p>
            <input type = "hidden" id = "ownerId" name = "OwnerId" asp-for = "OwnerId" class = "form-control" required>
        </div>
        <div class="form-group">
            <label for="carId">انتخاب خودرو</label>
            <select id="carId" name = "CarId" asp-for = "CarId" class="form-control" required>
                @foreach (var car in Model.Cars)
                {
                    <option value="@car.Id">@car.Model (@car.LicensePlate)</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="centerId">انتخاب مرکز</label>
            <select id="centerId" name="CenterId" asp-for="CenterId" class="form-control" required>
                @foreach (var center in Model.Centers)
                {
                    <option value="@center.Id">@center.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="date">انتخاب تاریخ</label>
            <select id="DayId" name="Date" asp-for="DayId" class="form-control" required>
                @foreach (var day in Model.Days)
                {
                        <option value="@day.Date">@day.Date.ToPersianString()</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">رزرو وقت</button>
    </form>
</div>
