@model BookingPanelViewModel
@using FrameWork;


@{
    ViewData["Title"] = "Schedule Appointment";
}

<h2>رزرو نوبت</h2>

@if (TempData["Message"] != null)
{
        <div class="alert alert-success">
        @TempData["Message"]
        </div>
}

<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label asp-for="CenterId" class="control-label">انتخاب مرکز</label>
        <select asp-for="CenterId" class="form-control">
            @foreach (var center in Model.Centers)
            {
                <option value="@center.Id">@center.Name</option>
            }
        </select>
        <span asp-validation-for="CenterId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CarId" class="control-label">انتخاب خودرو</label>
       <select asp-for="CarId" class="form-control">
            @foreach (var car in Model.Cars)
            {
                  <option value="@car.Id">@car.Model - @car.LicensePlate</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="date"  class="control-label">تاریخ</label>
        <select asp-for="date" class="form-control">
        @foreach (var date in Model.AvailableDates)
        {
             <option value="@date.Date">@date.Date.ToPersianString()</option>
        }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TimeSpan" class="control-label"> زمان</label>
        <select asp-for="TimeSpan" class="form-control">
            @foreach (var time in Model.TimeSlots)
            {
                 <option value="@time">@time</option>
            }
        </select>
    </div>
    </div>
    <div class = "flex-container">
    <button type="submit" class="btn btn-green"> ثبت درخواست </button>
    </div>
</form>
<style>
    .flex-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .btn-green {
        background-color: #28a745;
        color: white;
        border: none;
    }

    .btn-green:hover {
        background-color: #218838;
    }
</style>