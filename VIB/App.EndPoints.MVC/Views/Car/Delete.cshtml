@model App.Domain.Core.Entities.Vehicle.Car

<h2>حذف خودرو</h2>

<div>
    <h4>آیا مطمئن هستید که می‌خواهید این خودرو را حذف کنید؟</h4>
    <dl class="row">
        <dt class="col-sm-2">مدل خودرو</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">شماره پلاک</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" name="Id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">بازگشت</a>
    </form>
</div>
