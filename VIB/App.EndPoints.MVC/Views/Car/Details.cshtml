@model App.Domain.Core.Entities.Vehicle.Car
@using App.Domain.Core.Enums


<h2>جزییات خودرو</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">مدل خودرو</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">کارخانه سازنده</dt>
        <dd class="col-sm-10">
            @{
                string makeText = Model.Make switch
                {
                    MakeEnum.A => "ایران خودرو",
                    MakeEnum.B => "سایپا",
                };
            }
            @makeText
        </dd>
        <dt class="col-sm-2">سال ساخت</dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2">شماره پلاک</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>
    </dl>
    <a asp-action="Edit" class="btn btn-primary">ویرایش</a>
    <a asp-action="Delete" class="btn btn-danger">حذف</a>
    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</div>
